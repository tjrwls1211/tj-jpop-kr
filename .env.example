# 관리자 비밀번호
ADMIN_PASSWORD=your_admin_password_here

# Gemini API Key (크롤링 스크립트용)
# https://aistudio.google.com/app/apikey 에서 발급
GEMINI_API_KEY=your_gemini_api_key_here

# 데이터베이스 경로 (로컬 개발용)
DB_PATH=data/songs.db

# TJ 노래방 차트 API URL
TJ_CHART_API_URL=https://www.tjmedia.com/legacy/api/topAndHot100

# 세션 시크릿 (보안을 위해 강력한 랜덤 값 사용 필요)
# 생성 방법: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here

# 세션 쿠키 이름
SESSION_COOKIE_NAME=admin_session

# LLM 설정
GEMINI_MODEL=gemini-2.5-flash
LLM_DAILY_LIMIT=20

# Turso Database (배포용)
# https://turso.tech 에서 발급
# TURSO_DATABASE_URL=libsql://your-database.turso.io
# TURSO_AUTH_TOKEN=your_turso_auth_token
